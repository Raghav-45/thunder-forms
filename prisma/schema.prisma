generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/// User profiles containing authentication and basic user information
model profiles {
  id           String  @id @db.Uuid // UUID from auth provider
  email        String  @db.VarChar(256) // User's email address
  display_name String? @db.VarChar(256) // User's chosen display name

  forms forms[] // One-to-many: A user can create multiple forms
}

model forms {
  id             String    @id @default(cuid()) // Unique form identifier
  title          String // Form title
  description    String // Form description
  fields         Json // Dynamic form fields stored as JSON
  createdAt      DateTime  @default(now()) // Form creation timestamp
  expiresAt      DateTime? // Expiration date for the form, null for unlimited
  maxSubmissions Int? // Maximum number of submissions allowed, null for unlimited
  redirectUrl    String? // URL to redirect after form submission, null for default behavior

  profiles profiles @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  userId   String   @db.Uuid // References profiles.id

  responses responses[] // One-to-many: A form can have multiple responses
  template  templates? // One-to-one: A form can have at most one template
}

model responses {
  id        String   @id @default(cuid()) // Unique response identifier
  data      Json // Form submission data stored as JSON ( matching the form fields structure )
  createdAt DateTime @default(now()) // Response submission timestamp

  forms   forms  @relation(fields: [formsId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  formsId String // References forms.id
}

model templates {
  id           String   @id @default(cuid()) // Unique template identifier
  slug         String   @unique // URL-friendly unique identifier for template access
  title        String // Template name
  description  String // Template description
  createdBy    String // Creator identifier (could be user ID or system)
  createdAt    DateTime @default(now()) // Template creation timestamp
  thumbnailUrl String // Preview image URL for template gallery

  form   forms  @relation(fields: [formId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  formId String @unique // References forms.id - UNIQUE constraint ensures one-to-one
}
